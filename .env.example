# Jannah SMS Admin Configuration
# Copy this file to .env and update the values

# Application Settings & Theming
APP_NAME=Jannah SMS Admin
COMPANY_NAME=Jannah Property Management
APP_VERSION=v2.0
APP_TAGLINE=Modern SMS scheduling system for property management
APP_ICON=ðŸ“±
PRIMARY_COLOR=#3b82f6
SECONDARY_COLOR=#6b7280
DEBUG=false

# Security (CRITICAL: Change these!)
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-very-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
SESSION_COOKIE_NAME=jannah_session
SESSION_COOKIE_MAX_AGE=86400

# Database Configuration
# For local development (SQLite):
DATABASE_URL=sqlite:///./jannah_sms.db
# For production (PostgreSQL on Railway):
# DATABASE_URL will be automatically provided by Railway when you add PostgreSQL plugin

# SMS API Configuration (TextBelt)
# Get your API key from https://textbelt.com/
SMS_API_KEY=your-textbelt-api-key-here
SMS_API_BASE=https://textbelt.com/text

# Webhook Configuration (for receiving SMS replies)
# Set this to your public domain after deploying to Railway
# Format: https://your-app-name.railway.app/api/v1/webhooks/sms-reply
WEBHOOK_URL=

# Admin User Credentials (CHANGE PASSWORD!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_EMAIL=admin@jannah-sms.com

# Elderly-Friendly UI Settings
UI_LARGE_FONTS=true
UI_HIGH_CONTRAST=true
UI_SIMPLE_NAVIGATION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/jannah-sms.log

# CORS Settings (for development)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (optional, for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=your-email@gmail.com

# Webhook Configuration (optional)
# WEBHOOK_URL=https://your-webhook-endpoint.com/sms-status

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Performance Settings
UVICORN_WORKERS=1
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
