# GoodTenant Theme Configuration Example
# Copy this to .env to rebrand as GoodTenant

# Application Settings & Theming
APP_NAME=GoodTenant
COMPANY_NAME=GoodTenant Property Management
APP_VERSION=v2.0
APP_TAGLINE=Professional tenant communication platform
APP_ICON=üè†
PRIMARY_COLOR=#10b981
SECONDARY_COLOR=#374151
DEBUG=false
SECRET_KEY=your-very-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///./goodtenant.db

# SMS API Configuration (TextBelt)
SMS_API_KEY=your-textbelt-api-key-here
SMS_API_BASE=https://textbelt.com/text

# Security Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Admin User Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# Elderly-Friendly UI Settings
UI_LARGE_FONTS=true
UI_HIGH_CONTRAST=true
UI_SIMPLE_NAVIGATION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/goodtenant.log

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Performance Settings
UVICORN_WORKERS=1
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000